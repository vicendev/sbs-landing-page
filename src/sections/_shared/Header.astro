---
import ImageCustom from '../../components/ui/ImageCustom.astro';
import Logo from '../../assets/logox.png';  
---

<nav class="fixed w-full bg-white shadow-md z-50">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <a href="#inicio" class="flex items-center">
          <!-- Logo en un círculo más pequeño -->
          <div class="relative w-10 h-10 nav-logo">
            <svg class="w-full h-full" viewBox="0 0 40 40" fill="none">
              <!-- Fondo circular -->
              <circle cx="20" cy="20" r="18" fill="#FFFFFF" />
              
              <!-- Contenedor del logo -->
              <foreignObject x="7" y="7" width="26" height="26">
                <div style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%;">
                  <ImageCustom imageSource={Logo} alt="Logo SBS" style="width: 100%; height: 100%; object-fit: contain;" />
                </div>
              </foreignObject>
            </svg>
          </div>
          <!-- Texto al lado del logo -->
          <span class="ml-3 text-xl font-bold text-gray-800">SBS</span>
        </a>
      </div>
      
      <div class="hidden md:flex space-x-8">
        <a href="#inicio" class="nav-link text-gray-600 hover:text-gray-900">Inicio</a>
        <a href="#somos" class="nav-link text-gray-600 hover:text-gray-900">Somos</a>
        <a href="#mision" class="nav-link text-gray-600 hover:text-gray-900">Misión</a>
        <a href="#vision" class="nav-link text-gray-600 hover:text-gray-900">Visión</a>
        <a href="#servicios" class="nav-link text-gray-600 hover:text-gray-900">Servicios</a>
        <a href="#contacto" class="nav-link text-gray-600 hover:text-gray-900">Contacto</a>
      </div>
    </div>
  </div>
</nav>
