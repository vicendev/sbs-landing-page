  <!-- Contacto -->
  <section id="contacto" class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-lg mx-auto">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">Contáctanos</h2>
        <form class="space-y-6">
          <div>
            <label class="block text-gray-700 mb-2" for="nombre">Nombre completo</label>
            <input type="text" id="nombre" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
          
          <div>
            <label class="block text-gray-700 mb-2" for="email">Correo electrónico</label>
            <input type="email" id="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
          
          <div>
